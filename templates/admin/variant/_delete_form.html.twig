<form method="post" action="{{ path('admin_variant_delete', {'productId': product.id, 'id': variant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id ~ variant.id) }}">
    <button class="btn">Delete</button>
</form>